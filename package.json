{
  "name": "eden",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    ".k8s/charts/*",
    ".proto/*",
    ".templates/lib/*",
    "src/clients/*",
    "src/libs/*",
    "src/services/*",
    "src/tools/*"
  ],
  "scripts": {
    "barrel": "turbo run barrel",
    "build": "turbo run build",
    "clean": "turbo run clean --parallel",
    "clean:clients": "npm run clean -- --scope=@eden/client.*",
    "clean:libs": "npm run clean -- --ignore=@eden/client.* --ignore=@eden/proto.* --ignore=@eden/template.*",
    "clean:proto": "npm run clean -- --scope=@eden/proto.*",
    "clean:services": "npm run clean -- --scope=@eden/service.*",
    "clean:template": "npm run clean -- --scope=@eden/template.*",
    "dev": "turbo run dev --parallel",
    "generate": "turbo run generate",
    "generate:clients": "npm run generate -- --scope=@eden/client.*",
    "generate:libs": "npm run generate -- --ignore=@eden/client.* --ignore=@eden/proto.* --ignore=@eden/template.*",
    "generate:proto": "npm run generate -- --scope=@eden/proto.*",
    "generate:services": "npm run generate -- --scope=@eden/service.*",
    "generate:template": "npm run generate -- --scope=@eden/template.*",
    "lint": "trunk check",
    "lint:all": "trunk check --all",
    "lint:fmt": "trunk fmt",
    "lint:fmt:all": "trunk fmt --all",
    "prepare": "husky install",
    "release": "run-s \"release:*\"",
    "release:dry": "semantic-release --no-ci --dry-run --extends ./.release.json",
    "release:ci": "semantic-release --ci --extends ./.release.json",
    "reset": "turbo run reset --parallel",
    "reset:clients": "npm run reset -- --scope=@eden/client.*",
    "reset:libs": "npm run reset -- --ignore=@eden/client.* --ignore=@eden/proto.* --ignore=@eden/template.*",
    "reset:proto": "npm run reset -- --scope=@eden/proto.*",
    "reset:services": "npm run reset -- --scope=@eden/service.*",
    "reset:template": "npm run reset -- --scope=@eden/template.*",
    "update": "turbo run update",
    "update:clients": "npm run update -- --scope=@eden/client.*",
    "update:libs": "npm run update -- --ignore=@eden/client.* --ignore=@eden/proto.* --ignore=@eden/template.*",
    "update:proto": "npm run update -- --scope=@eden/proto.*",
    "update:services": "npm run update -- --scope=@eden/service.*",
    "update:template": "npm run update -- --scope=@eden/template.*",
    "update:root": "ncu --upgrade --packageFile package.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@google/semantic-release-replace-plugin": "^1.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "commander": "^9.0.0",
    "commitizen": "^4.2.4",
    "conf": "^10.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "depcheck": "^1.4.3",
    "husky": "^7.0.0",
    "hygen": "^6.1.0",
    "npm-check-updates": "^12.2.1",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^19.0.2",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@7.18.1"
}
