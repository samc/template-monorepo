{
  "name": "mono",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    ".proto/*",
    ".templates/lib/*",
    "entities/clients/*",
    "entities/services/*",
    "entities/gateways/*",
    "entities/libs/*"
  ],
  "scripts": {
    "barrel": "turbo run barrel",
    "build": "turbo run build",
    "clean": "turbo run clean --parallel",
    "clean:clients": "npm run clean -- --scope=@mono/client.*",
    "clean:libs": "npm run clean -- --ignore=@mono/client.* --ignore=@mono/proto.* --ignore=@mono/template.*",
    "clean:proto": "npm run clean -- --scope=@mono/proto.*",
    "clean:functions": "npm run clean -- --scope=@mono/function.*",
    "clean:template": "npm run clean -- --scope=@mono/template.*",
    "deploy": "turbo run deploy",
    "dev": "turbo run dev",
    "generate": "turbo run generate",
    "generate:clients": "npm run generate -- --scope=@mono/client.*",
    "generate:libs": "npm run generate -- --ignore=@mono/client.* --ignore=@mono/proto.* --ignore=@mono/template.*",
    "generate:proto": "npm run generate -- --scope=@mono/proto.*",
    "generate:functions": "npm run generate -- --scope=@mono/function.*",
    "generate:template": "npm run generate -- --scope=@mono/template.*",
    "lint": "trunk check",
    "lint:all": "trunk check --all",
    "lint:fmt": "trunk fmt",
    "lint:fmt:all": "trunk fmt --all",
    "prepare": "husky install",
    "release": "run-s \"release:*\"",
    "release:dry": "semantic-release --no-ci --dry-run --extends ./.release.json",
    "release:ci": "semantic-release --ci --extends ./.release.json",
    "reset": "turbo run reset --parallel",
    "reset:clients": "npm run reset -- --scope=@mono/client.*",
    "reset:libs": "npm run reset -- --ignore=@mono/client.* --ignore=@mono/proto.* --ignore=@mono/template.*",
    "reset:proto": "npm run reset -- --scope=@mono/proto.*",
    "reset:functions": "npm run reset -- --scope=@mono/function.*",
    "reset:template": "npm run reset -- --scope=@mono/template.*",
    "update": "turbo run update",
    "update:project": "ncu --upgrade --packageFile package.json; npm install",
    "update:clients": "npm run update -- --scope=@mono/client.*",
    "update:gateway": "npm run update -- --scope=@mono/gateway.*",
    "update:libs": "npm run update -- --ignore=@mono/client.* --ignore=@mono/proto.* --ignore=@mono/template.*",
    "update:proto": "npm run update -- --scope=@mono/proto.*",
    "update:functions": "npm run update -- --scope=@mono/function.*",
    "update:template": "npm run update -- --scope=@mono/template.*"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@google/semantic-release-replace-plugin": "^1.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "commander": "^9.1.0",
    "commitizen": "^4.2.4",
    "conf": "^10.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "depcheck": "^1.4.3",
    "husky": "^7.0.4",
    "hygen": "^6.2.0",
    "npm-check-updates": "^12.5.4",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^19.0.2",
    "serverless": "^3.7.9",
    "serverless-offline": "^8.5.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@7.18.1",
  "dependencies": {
    "yaml": "2.0.0-10"
  }
}
