datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator graphql {
  provider   = "graphql-schema-generator"
  output     = "./graphql"
  createCRUD = "true"
}

generator db {
  provider = "go run github.com/prisma/prisma-client-go"
  output   = "./db"
  package  = "db"
}

model Contact {
  id      String @id @default(cuid())
  email   String @unique
  name    String
  message String
}
