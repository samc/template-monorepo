{
  "extends": "@taygo/config/tsconfig/tsconfig.client.next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@taygo/client.contact/*": [
        "src/*",
        "src/components/*"
      ],
      "@taygo/client.contact/graphql/*": [
        "graphql/*",
      ]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "styled",
          "css",
          "sty"
        ]
      }
    ],
    "isolatedModules": true
  },
  "references": [
    {
      "path": "../../libs/abstract"
    },
    {
      "path": "../../libs/primitives"
    },
    {
      "path": "../../libs/protocol"
    },
    {
      "path": "../../libs/sensors"
    },
    {
      "path": "../../libs/theme"
    },
    {
      "path": "../../libs/types"
    },
    {
      "path": "../../libs/universal"
    },
    {
      "path": "../../libs/utils"
    }
  ],
  "include": [
    "overrides.d.ts",
    "next-env.d.ts",
    "graphql/**/*.tsx?",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    ".next",
    ".tmp",
    "e2e",
    "node_modules"
  ]
}
